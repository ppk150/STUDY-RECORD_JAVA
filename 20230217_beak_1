import java.util.*;
import java.io.*;


public class Main
{
    public static void main(String args[])
    {
        Scanner sc = new Scanner(System.in);

        int T = sc.nextInt();

        int start =  2 ; 


        for(int i = 0 ; i < T ; i ++){

            start =  start * 2 -1;

        }

        System.out.println((start)*(start));



    }
}
