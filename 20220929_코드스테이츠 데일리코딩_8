package com.codestates.coplit; 
import java.util.*;

public class Solution {  
	public String convertDoubleSpaceToSingle(String str) {
    // TODO:


    String[] result = str.split("  ");
    String realresult = "";


    if(str.length() > 0){


    for(int i  = 0 ; i < result.length ; i ++){

      if(i == 0){
        realresult =  realresult +result[i]  ;

      }else{
      realresult =  realresult +" " +result[i]  ;
      }

    }

    }

    return realresult;
	} 
}
