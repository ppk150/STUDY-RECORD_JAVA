package com.codestates.coplit; 
import java.util.*;

public class Solution {  
	public String firstCharacter(String str) {
    // TODO:
    String[] st = str.split(" ");
    String result = "";

    if(str.length() == 0){
      return str;
    }
    for(int i = 0 ; i < st.length; i++){

      result = result+ Character.toString(st[i].charAt(0));


    }
    return result;
	} 
}
